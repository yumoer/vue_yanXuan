@import "mixins.styl"
html
  padding 0
  margin 0
#app
  width 100%
  height 100%
  margin-right auto
  margin-left auto
  background #F4F4F4
  .index_header
    height 245px
    width 100%
    .header_main
      position fixed!important
      left 0
      top 0
      width: 100%
      height 245px
      .main_content
        background-color #fff
        position relative
        height 100%
        .main_top
          display flex
          padding .21333rem .4rem
          flex-flow row nowrap
          -webkit-box-align center
          height 145.85px
          box-sizing border-box

          .top_title
            width 1.84rem
            height .53333rem
            background-image url(//yanxuan-static.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/indexLogo-11d65342f9.png)
            display inline-block
            margin-right .26667rem
            background-size cover
            background-position center
            top 0
            bottom 0
            margin auto 0
          .top_input
            -webkit-box-flex: 1;
            flex-grow: 1;
            width 881.86px
            height 92.83px
            background-color #EDEDED
            position relative
            box-sizing border-box
            border-radius 5px
            .input_search
              width 505.3px
              height 69.6px
              color #666
              font-size .37333rem
              margin-bottom .5rem
              position absolute
              left 0
              right 0
              bottom 0
              top 0
              margin auto
              line-height 69.6px
  .footer_guide  //footer
    top-border-1px(#e4e4e4)
    position fixed
    z-index 100
    left 0
    right 0
    bottom 0
    background-color #fff
    width 100%
    height 2.09067rem
    display flex
    border-top 1px solid #d9d9d9
    background-color #fafafa
    flex-flow row nowrap
    align-items center
    justify-content space-around
    .guide_item
      display flex
      flex 1
      text-align center
      flex-direction column
      align-items center
      margin 5px
      color #999999
      height 100%
      box-sizing border-box
      margin-top .6rem
      &.active
        color red
      .iconfont
        display inline-block
        width .66667rem
        height .66667rem
        background-size 100%
        background-repeat no-repeat
        vertical-align middle
        &.icon-all
          display inline-block
          vertical-align middle
          background-image url(//yanxuan-static.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/sprites/tabBar-s73fb615cb3-195f39fd2b.png)
          background-repeat: no-repeat
          width .85333rem
          height .85333rem
        &.icon-U
          background-position 0.03rem -4.35rem
        &.icon-shiwu
          background-position 0.03rem -7.52rem
        &.icon-dingdan1
          background-position 0.03rem -3.25rem
        &.icon-gouwuche
          background-position 0.03rem -1.15rem
        &.icon-wode
          background-position 0.03rem -9.65rem
      .icon_name
        display: inline-block;
        margin-top: .09333rem;
        font-size: .512rem;
        line-height: 1;
